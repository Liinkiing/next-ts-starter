{
  "name": "next-ts-starter",
  "version": "1.0.0",
  "description": "A Next.JS powered typescript starter with styled components, styled-system and framer-motion",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --no-error-on-unmatched-pattern --cache --fix --report-unused-disable-directives src/**/*.{js,ts,jsx,tsx}",
    "ts:check": "tsc --noEmit"
  },
  "keywords": [
    "starter",
    "template",
    "styled-components",
    "styled-system",
    "framer-motion",
    "next",
    "nextjs",
    "react",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/Liinkiing/next-ts-starter",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/Liinkiing/next-ts-starter/issues"
  },
  "author": "Omar Jbara <omar.jbara2@gmail.com>",
  "dependencies": {
    "@styled-system/should-forward-prop": "^5.1.5",
    "dotenv-load": "^2.0.0",
    "framer-motion": "^2.3.0",
    "next": "^9.5.1",
    "next-compose-plugins": "^2.2.0",
    "next-fonts": "^1.4.0",
    "next-images": "^1.4.1",
    "nprogress": "^0.2.0",
    "polished": "^3.6.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "styled-components": "^5.1.1",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.45",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.2",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__should-forward-prop": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
