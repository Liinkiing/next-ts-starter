{
  "name": "next-ts-starter",
  "version": "1.0.0",
  "description": "A Next.JS powered typescript starter with styled components, styled-system, jest, @testing-library and framer-motion",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --no-error-on-unmatched-pattern --cache --fix --report-unused-disable-directives src/**/*.{js,ts,jsx,tsx}",
    "ts:check": "tsc --noEmit",
    "test": "jest --runInBand --coverage=false",
    "test:ci": "yarn test --ci",
    "test:watch": "yarn test --watch",
    "cy:open": "yarn --cwd cypress cy:open",
    "cy:run": "yarn --cwd cypress cy:run",
    "cy:run:cy": "yarn --cwd cypress cy:run:ci",
    "prepare": "husky install"
  },
  "keywords": [
    "starter",
    "template",
    "styled-components",
    "styled-system",
    "framer-motion",
    "next",
    "nextjs",
    "react",
    "testing",
    "jest",
    "cypress",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/Liinkiing/next-ts-starter",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/Liinkiing/next-ts-starter/issues"
  },
  "author": "Omar Jbara <omar.jbara2@gmail.com>",
  "dependencies": {
    "@styled-system/should-forward-prop": "^5.1.5",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "babel-jest": "^26.6.3",
    "dotenv-load": "^2.0.0",
    "framer-motion": "^3.10.3",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "next": "^10.0.8",
    "next-compose-plugins": "^2.2.1",
    "next-fonts": "^1.5.1",
    "next-images": "^1.7.0",
    "nprogress": "^0.2.0",
    "polished": "^4.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "styled-components": "^5.2.1",
    "styled-system": "^5.1.5",
    "ts-jest": "^26.5.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.34",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/styled-components": "^5.1.8",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__css": "^5.0.14",
    "@types/styled-system__should-forward-prop": "^5.1.2",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "jest -c jest.config.js --bail --runInBand --findRelatedTests --coverage=false"
    ]
  }
}
